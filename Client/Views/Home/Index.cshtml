<div ng-controller="personsController">
    <label class="sr-only" for="inlineFormInputGroup">Username</label>
    <div class="input-group">
        <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Username" ng-model="fullName">
        <button class="btn btn-default" ng-click="load()">search</button> `
    </div>

    <div class="container" ng-show="loaded">
        <div class="col-lg-12 table-container nopadding">
            <table class="table">
                <thead>
                    <tr>
                        <th>Full name</th>
                        <th>Contacts</th>                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="p in persons | orderBy:sortparam | startFrom:currentPage*pageSize | limitTo:pageSize | filter:{fullName}">
                        <td>{{p.fullName}}</td>
                        <td>{{p.contacts.join(", ")}}</td>                        
                        <td class="edit"><i class="material-icons">edit</i> редактировать</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <nav aria-label="Page navigation example">
            <button ng-disabled="currentPage == 0" ng-click="currentPage=currentPage-1">
                Previous
            </button>
            {{currentPage+1}}/{{numberOfPages()}}
            <button ng-disabled="currentPage >= getData().length/pageSize - 1" ng-click="currentPage=currentPage+1">
                Next
            </button>
        </nav>
    </div>
</div>